{
  "parser": "babel-eslint",  
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "react/prop-types": 0,
    "no-console": 1
  },
  "plugins": [
    "import",
    "react"
  ],
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "WebpackConfig/webpack.isomorphic.config.js"
      }
    },
    "import/ignore": [
      "\\.(scss|less|css)$"
    ]
  }
}