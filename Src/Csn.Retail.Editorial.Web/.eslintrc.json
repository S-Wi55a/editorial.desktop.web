{
  "parser": "babel-eslint",  
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "react/prop-types": 0,
    "no-console": 1,
    "react/display-name": 0
  },
  "plugins": [
    "import",
    "react"
  ],
  "settings": {
    "import/ignore": [
      "\\.(scss|less|css)$"
    ]
  }
}