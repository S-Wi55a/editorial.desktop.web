@using Csn.Retail.Editorial.Web.Features.Shared.HtmlHelpers
@model Csn.Retail.Editorial.Web.Features.Shared.Models.PolarNativeAdsData

@if (Html.CurrentTenant().DisplayPolarAds && Model != null)
{
    <script>
        var csn_editorial = csn_editorial || {};
        csn_editorial.nativeAds = {
            siteName: "@Html.CurrentTenant().PolarSiteName",
            areaName: "@Model.AreaName",
            makeModel: "@Model.MakeModel",
            setPropertyID: "@Html.CurrentTenant().PolarSitePropertyId"
        };
    </script>
}