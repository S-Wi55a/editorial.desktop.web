@using Csn.Retail.Editorial.Web.Features.MediaMotiveAds
@using Csn.Retail.Editorial.Web.Infrastructure.Utils
@model Csn.Retail.Editorial.Web.Features.MediaMotiveAds.MediaMotiveAdViewModel
    

<div id="@Model.TileId" 
     class="mediamotive-block mediamotive-@Model.Description.ToLower() mediamotive-block--loading" 
     data-krux-required="@Model.DataKruxRequired.ToString().ToLower()" 
     @{ /*We are addding the Random Key and the ViewId key here becasue the view model is getting cached*/ }
     data-media-motive-url="@($"{Model.ScriptUrl}/{SasAdTags.SasAdTagKeys.Random}={RandomNumberGenerator.Generate()}/{SasAdTags.SasAdTagKeys.ViewId}={RandomNumberGenerator.Generate()}")">
@if (!string.IsNullOrEmpty(Model.NoScriptImageUrl))
{
    <span class="loader"></span>
    <noscript>
        <a target="_blank" href="@Model.NoScriptUrl">
            <img src="@Model.NoScriptImageUrl" width="@Model.Width" height="@Model.Height" border="0" alt="Advertisement" />
        </a>
    </noscript>
}
</div>