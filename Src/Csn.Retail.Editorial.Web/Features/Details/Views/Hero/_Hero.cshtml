@using Csn.Retail.Editorial.Web.Features.Shared.Proxies.EditorialApi
@model Csn.Retail.Editorial.Web.Features.Details.HeroSection

<div class="hero">
    @if (Model.Type == HeroType.MultipleImages)
    {
        Html.RenderPartial("Hero/_MultipleImages", @Model);
    }
    else if (Model.Type == HeroType.ImagesAndVideo)
    {
        Html.RenderPartial("Hero/_ImagesAndVideo", @Model);
    }
    else if (Model.Type == HeroType.Video)
    {
        Html.RenderPartial("Hero/_SingleVideo", @Model);
    }
    else if (Model.Type == HeroType.SingleImage)
    {
        Html.RenderPartial("Hero/_SingleImage", @Model);
    }
</div>