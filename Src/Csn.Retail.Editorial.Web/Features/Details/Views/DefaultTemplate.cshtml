@using Csn.Retail.Editorial.Web.Infrastructure.AssetMappers
@model Csn.Retail.Editorial.Web.Features.Details.Models.ArticleViewModel

@section Head {
    @{Html.RenderPartial("Partials/Head/_SocialMetaData", Model.SocialMetaData); }
    <meta name="csn:networkid" content="@Model.NetworkId">
}

@section Styles {
    @Html.AssetCss("details-page")
}


@section TopScripts {
}

<article>
    @{ Html.RenderPartial("Partials/Hero/_Hero", Model.HeroSection); }
    <div class="container">
        @{ Html.RenderPartial("Partials/Layout/_Main"); }
        @{ Html.RenderPartial("Partials/Layout/_Aside"); }
    </div>
</article>

@section BottomScripts
{
    @Html.AssetJs("details-page", LoadType.Defer)
}
