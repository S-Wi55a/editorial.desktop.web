@model Csn.Retail.Editorial.Web.Features.Details.Models.ArticleViewModel
    
@if (Model?.Contributors != null && Model.Contributors.Any())
{
    <div class="article__authors">
        @foreach (var contributor in Model.Contributors)
        {
            <div class="author-image">
                <img src="@contributor.ImageUrl" />
            </div>
                <div class="author-details">
                    <div class="description">@contributor.Description</div>
                    <div class="name">@contributor.Name</div>
                </div>
                <div class="author-links">
                    <a href="@contributor.LinkUrl">See all articles</a>
                </div>
        }
    </div>
}