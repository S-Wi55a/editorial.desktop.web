@using Bolt.Common.Extensions
@model Csn.Retail.Editorial.Web.Features.Details.Models.ArticleViewModel

@{
    var articleTypeLabel = Model.ArticleTypeLabel != null && !Model.ArticleTypeLabel.ArticleTypeText.IsSame(Model.ArticleType) ? Model.ArticleTypeLabel.ArticleTypeText.ToLower() : string.Empty;
}

<div class="article @Model.ArticleType.ToLower() @articleTypeLabel">
    @if (articleTypeLabel.IsSame("carpool"))
    {
        // There should be a better way to do this, we will revisit this for International approach
        Html.RenderPartial("Carsales/Carpool/_CarpoolHeader", Model);
    }
    else
    {
        Html.RenderPartial("Partials/Content/_ArticleTypeAndSocialIcons", Model);
        Html.RenderPartial("Partials/Content/_ArticleHeader", Model);
    }


    @{ Html.RenderPartial("Partials/Content/_ArticleSummary", Model); }

    @{ Html.RenderPartial("Partials/Content/_ArticleBody", Model); }

    @{ Html.RenderPartial("Partials/Content/_ArticleShare--Bottom", Model); }

    @{ Html.RenderPartial("Partials/Content/_Contributors", Model); }

    @{ Html.RenderPartial("Partials/MediaMotive/_Tile15", Model.MediaMotiveData); }

    @if (Model.DisqusData != null) { Html.RenderPartial("Partials/Disqus/_Disqus", Model.DisqusData); }

    @{ Html.RenderPartial("_Disclaimer"); }

    @{ Html.RenderPartial("Partials/MediaMotive/_Tracking", Model.MediaMotiveData); }

    @{ Html.RenderPartial("Partials/MediaMotive/_Teads", Model.MediaMotiveData); }
</div>
