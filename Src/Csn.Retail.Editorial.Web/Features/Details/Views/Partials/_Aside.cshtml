@using Csn.Retail.Editorial.Web.Features.MediaMotiveAds
@using Csn.Retail.Editorial.Web.Features.MediaMotiveAds.HtmlHelpers
@using Csn.Retail.Editorial.Web.Features.Shared.HtmlHelpers
@using Newtonsoft.Json
@model Csn.Retail.Editorial.Web.Features.Details.Models.ArticleViewModel

<div class="wrapper--aside">
    <div class="aside ">
        <!-- Aside Section -->
        @if (Html.CurrentTenant().AdSource == "MediaMotive")
        {
            Html.RenderPartial("Partials/MediaMotive/_Mrec", Model.MediaMotiveData);
        }

        @if (Html.CurrentTenant().AdSource == "GoogleAd")
        {
            <div id="div-gpt-ad-1496703698377-0" class="mediamotive-block mediamotive-mrec"></div>
        }

        @if (Model?.ExpertRatings != null || Model?.ProsCons != null)
        {
            Html.RenderPartial("Partials/Widgets/EditorRatings/_EditorsRating", Model);

        }
        @{ Html.RenderPartial("Partials/Widgets/StockForSale/_StockForSaleData", Model); }
    </div>
</div>