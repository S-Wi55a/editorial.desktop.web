@using Newtonsoft.Json
@model Csn.Retail.Editorial.Web.Features.Details.Models.ArticleViewModel

<div class="aside ">
    <!-- Aside Section -->
    @{ Html.RenderPartial("Partials/MediaMotive/_Mrec", Model.MediaMotiveData); }

    @if (Model?.ExpertRatings != null && Model?.ProsCons != null)
    {
        Html.RenderPartial("Partials/Widgets/EditorRatings/_EditorsRating", Model);

    }
     
    @if (Model.StockListingData != null && Model.StockListingData.Filters.Any())
    {
        <script>
            var csn_editorial = csn_editorial || {};
            csn_editorial.stockForSale = @Html.Raw(JsonConvert.SerializeObject(Model.StockListingData));
        </script>
        <div class="stock-for-sale-placeholder"></div>
    }

</div>

