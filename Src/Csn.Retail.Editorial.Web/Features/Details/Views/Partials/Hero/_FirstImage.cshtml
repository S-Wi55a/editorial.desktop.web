@model Csn.Retail.Editorial.Web.Features.Details.Models.HeroSection

@{
    var cropParam = Model.Images.First().NeedsCropping ? "&pxc_method=crop" : "";
}

<img sizes="100vw"
     src="@($"{Model.Images.First().Url}?width=1024{cropParam}")"
     srcset="@{$"{Model.Images.First().Url}?width=780{cropParam} 1200w, {Model.Images.First().Url}?width=642{cropParam} 1024w, {Model.Images.First().Url}?width=492 768w"}"
     alt="@Model.Images.First().AlternateText" />